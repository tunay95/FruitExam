@using FruitExamTry.Models;
@model List<Fruit>

@{
	int count = 0;
}

<!-- Begin Page Content -->
<div class="container-fluid">

	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Tables</h1>
	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h3 class="m-0 font-weight-bold text-success" style="margin-left:69%">Fruits</h3>
			<a class="btn btn-primary" style="margin-left:87%" asp-action="Create" asp-controller="Fruit">Create</a>

		</div>

		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>No</th>
							<th>Id</th>
							<th>Title</th>
							<th>Description</th>
							<th>Image</th>
							<th>Choises</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							count++;
							<tr>
								<td>@count</td>
								<td>@item.Id</td>
								<td>@item.Title</td>
								<td>@item.Description</td>
								<td><src ="~/Upload/@item.ImgUrl" /></td>
								<td>
									<a class="btn btn-warning" asp-action="Update" asp-controller="Fruit" asp-route-id="@item.Id">Update</a>
									<a class="btn btn-danger" asp-action="Delete" asp-controller="Fruit" asp-route-id="@item.Id">Delete</a>
								</td>
							</tr>

						}
					</tbody>
				</table>
			</div>
		</div>
	</div>

</div>
<!-- /.container-fluid -->
	</div>
<!-- End of Main Content -->
